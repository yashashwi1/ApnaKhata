@inject NavigationManager UriHelper
<div class="top-row ps-3 navbar navbar-dark">
	<div class="container-fluid">
		<a class="navbar-brand" href="">ApnaPOC</a>
		<button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
			<span class="navbar-toggler-icon"></span>
		</button>
	</div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
	<nav class="flex-column">
		<div class="nav-item px-3">
			<NavLink class="nav-link"  @onclick="()=>onNavLinkClick(home)" >
				<span class="oi oi-home" aria-hidden="true"></span> Home
			</NavLink>
		</div>
		<div class="nav-item px-3">
			<NavLink class="nav-link" @onclick="()=>onNavLinkClick(profile)">
				<span class="oi oi-person" aria-hidden="true"></span> Profile
			</NavLink>
		</div>
		<div class="nav-item px-3">
			<NavLink class="nav-link" @onclick="()=>onNavLinkClick(expense)">
				<span class="oi oi-dollar" aria-hidden="true"></span> Expense
			</NavLink>
		</div>
		<div class="nav-item px-3">
			<NavLink class="nav-link" @onclick="()=>onNavLinkClick(alerts)">
				<span class="oi oi-signal" aria-hidden="true"></span> Alerts
			</NavLink>
		</div>
		<div class="nav-item px-3">
			<NavLink class="nav-link" @onclick="()=>onNavLinkClick(reports)">
				<span class="oi oi-briefcase" aria-hidden="true"></span> Reports
			</NavLink>
		</div>
	</nav>
</div>

